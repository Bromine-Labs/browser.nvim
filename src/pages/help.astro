
---
import "../styles.css";
// shut up this isnt ai i just couldnt think of a good name
import commandsData from '../commands.json';

interface Command {
  command: string;
  description: string;
}

const commands: Command[] = commandsData as Command[];
---

<html lang="en">
  <head>
    <title>Help - Browser.nvim</title>
  </head>

  <body class="bg-base text-text p-6 overflow-hidden rounded-lg shadow-lg">

    <h1 class="text-3xl font-bold mb-4 border-b pb-2 border-gray-200">Help Manual</h1>
    <p class="mb-6">This is the help manual for the browser. It provides a quick reference for common commands to help you navigate and control your browsing experience efficiently.</p>

    <h2 class="text-2xl font-semibold mb-4 mt-6">Commands</h2>
    <ul class="list-none p-0">
      {commands.map((cmd) => (
        <li class="mb-2 flex items-baseline">
          <strong class="mr-2 min-w-[100px] inline-block">{cmd.command}</strong>
          <span class="">- {cmd.description}</span>
        </li>
      ))}
    </ul>

  </body>
</html>
